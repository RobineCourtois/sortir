{% extends 'base.html.twig' %}

{% block title %}
	Modifier un campus | Sortir.com
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h2>Modifier un campus</h2>

		<div class="card p-4 bg-dark text-white">
			{{ form_start(campusForm) }}
			<div class="mb-3">
				{{ form_widget(campusForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du campus'}}) }}
			</div>
			<button type="submit" class="btn btn-warning">Modifier</button>
			<a href="{{ path('campus_list') }}" class="btn btn-danger ms-2">Annuler</a>
			{{ form_end(campusForm) }}
		</div>
	</div>
{% endblock %}
