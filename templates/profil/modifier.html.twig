{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Modifier mon profil {% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center mt-5">
		<div class="card shadow-sm form-background" style="max-width: 600px; width: 100%;">
			<div class="card-header text-center bg-dark text-light">
				<h1 class="mb-0">Mon Profil</h1>
			</div>
			<div class="card-body">
				{{ form_start(form) }}

				<div class="mb-3 row align-items-center">
					<label for="{{ form.campus.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Campus</label>
					<div class="col-sm-7">
						{{ form_widget(form.campus, {'attr': {'class': 'form-control form-control-sm'}}) }}
						{{ form_errors(form.campus) }}
					</div>
				</div>

				<div class="mb-3 row align-items-center">
					<label for="{{ form.pseudo.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Pseudo</label>
					<div class="col-sm-7">
						{{ form_widget(form.pseudo, {'attr': {'class': 'form-control form-control-sm'}}) }}
						{{ form_errors(form.pseudo) }}
					</div>
				</div>

				<div class="mb-3 row align-items-center">
					<label for="{{ form.prenom.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Prénom</label>
					<div class="col-sm-7">
						{{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-sm'}}) }}
						{{ form_errors(form.prenom) }}
					</div>
				</div>

				<div class="mb-3 row align-items-center">
					<label for="{{ form.nom.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Nom</label>
					<div class="col-sm-7">
						{{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-sm'}}) }}
						{{ form_errors(form.nom) }}
					</div>
				</div>

				<div class="mb-3 row align-items-center">
					<label for="{{ form.telephone.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Téléphone</label>
					<div class="col-sm-7">
						{{ form_widget(form.telephone, {'attr': {'class': 'form-control form-control-sm'}}) }}
						{{ form_errors(form.telephone) }}
					</div>
				</div>

				<div class="mb-3 row align-items-center">
					<label for="{{ form.email.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Email</label>
					<div class="col-sm-7">
						{{ form_widget(form.email, {'attr': {'class': 'form-control form-control-sm'}}) }}
						{{ form_errors(form.email) }}
					</div>
				</div>

				<div class="mb-3 row align-items-center">
					<label for="{{ form.plainPassword.first.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Mot de passe</label>
					<div class="col-sm-7">
						{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control form-control-sm'}}) }}
						{{ form_errors(form.plainPassword.first) }}
					</div>
				</div>

				<div class="mb-4 row align-items-center">
					<label for="{{ form.plainPassword.second.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Confirmer le mot de passe</label>
					<div class="col-sm-7">
						{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control form-control-sm'}}) }}
						{{ form_errors(form.plainPassword.second) }}
					</div>
				</div>

				<div class="row justify-content-center">
					<div class="col-sm-9 text-center">
						<button type="submit" class="btn btn-success btn-sm">
							Enregistrer
						</button>
						<a href="{{ path('main_home') }}" class="btn btn-danger btn-sm">
							Retour
						</a>
					</div>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
