{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe | Sortir.com{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-dark text-white shadow">
                    <div class="card-header">
                        <h2 class="mb-0 text-center">Réinitialiser votre mot de passe</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(resetForm) }}
                        <div class="mb-3">
                            {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe') }}
                            {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(resetForm.plainPassword) }}
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Réinitialiser</button>
                        </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
