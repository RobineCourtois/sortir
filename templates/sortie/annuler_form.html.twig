{% extends 'base.html.twig' %}

{% block title %}Annuler la sortie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">Annuler la sortie : {{ sortie.nom }}</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.motifAnnulation) }}
                    {{ form_widget(form.motifAnnulation, {'attr': {'class': 'form-control', 'placeholder': 'Indiquez le motif de l\'annulation'}}) }}
                    {{ form_errors(form.motifAnnulation) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('main_home') }}" class="btn btn-secondary">
                        Retour
                    </a>
                    <button type="submit" class="btn btn-danger">
                        Annuler la sortie
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
