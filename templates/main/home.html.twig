{% extends 'base.html.twig' %}

{% block title %}Accueil | Sortir.com{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end mb-3">
        <div class="text-end">
            <div>Participant : <strong>{{ participant.pseudo }}</strong></div>
            <div>Date du jour : <strong>{{ dateDuJour|date('d/m/Y') }}</strong></div>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <h2 class="mb-4">Filtrer les sorties</h2>
    <div class="card shadow-sm mb-5 form-background">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row g-3">
                <div class="col-md-3 mb-3">
                    {{ form_label(form.campus) }}
                    {{ form_widget(form.campus, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.campus) }}
                </div>
                <div class="col-md-3 mb-3">
                    {{ form_label(form.search) }}
                    {{ form_widget(form.search, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.search) }}
                </div>
                <div class="col-md-2 mb-3">
                    {{ form_label(form.dateDebut) }}
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateDebut) }}
                </div>
                <div class="col-md-2 mb-3">
                    {{ form_label(form.dateFin) }}
                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateFin) }}
                </div>
                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-success">Rechercher</button>
                    <a href="{{ path('main_home') }}" class="btn btn-secondary btn-sm d-flex align-items-center">R√©initialiser</a>
                </div>
            </div>
            <div class="row g-3 mt-3">
                <div class="col d-flex flex-wrap gap-4">
                    {% for field in ['organisateur', 'inscrit', 'non_inscrit', 'terminees'] %}
                        <div class="form-check">
                            {{ form_widget(attribute(form, field), {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(attribute(form, field), null, {'label_attr': {'class': 'form-check-label ms-1'}}) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

        {# ======================== CARTES (tous les utilisateurs sauf admin) ========================= #}
        <h2 class="mb-4">Liste des sorties</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for sortie in sorties %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="overflow-hidden">
                            <img src="{{ asset(sortie.filename ? 'uploads/images/' ~ sortie.filename : 'img/default.jpg') }}"
                                 class="card-img-top sortie-image"
                                 alt="Image de la sortie">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">{{ sortie.nom }}</h5>
                            <p class="card-text mb-1">üìÖ <strong>Date :</strong> {{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y') : '' }}</p>
                            <p class="card-text mb-1">üóìÔ∏è <strong>Cl√¥ture :</strong> {{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '' }}</p>
                            <p class="card-text mb-1">üë• <strong>Places :</strong> {{ sortie.participants|length }} / {{ sortie.nbInscriptionMax ?: '‚àû' }}</p>
                            <p class="card-text mb-1">üö¶ <strong>√âtat :</strong> {{ sortie.etat.value ?? sortie.etat }}</p>
                            <p class="card-text mb-1">üë§ <strong>Organisateur :</strong>
                                <a href="{{ path('profil_consulter', {'id': sortie.organisateur.id}) }}">
                                    {{ sortie.organisateur.pseudo }}
                                </a>
                            </p>
                            <div class="mt-auto d-grid gap-2">
                                <a href="{{ path('sortie_details', {'id': sortie.id}) }}" class="btn btn-info btn-sm">D√©tails</a>
                                {% if app.user.administrateur %}
                                    <a href="{{ path('sortie_modifier', {'id': sortie.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                                {% elseif sortie.organisateur == app.user and sortie.etat.value == 'En cr√©ation' %}
                                    <a href="{{ path('sortie_modifier', {'id': sortie.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                                {% endif %}
                                {% if sortie.organisateur == app.user and (sortie.etat.value == 'Ouverte' or sortie.etat.value == 'En cr√©ation') %}
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modal-annuler-{{ sortie.id }}">
                                        Annuler
                                    </button>
                                {% endif %}

                                {% set inscriptionPossible = sortie.dateLimiteInscription > "now"|date('Y-m-d H:i')
                                        and (sortie.nbInscriptionMax > sortie.participants|length or sortie.nbInscriptionMax is null) %}

                                {% if sortie.organisateur != app.user and not sortie.estInscrit(participant) and inscriptionPossible %}                                        <form action="{{ path('sortie_inscrire', {'id': sortie.id}) }}" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-success btn-sm">S'inscrire</button>
                                        </form>
                                    {% elseif sortie.estInscrit(participant) and sortie.dateHeureDebut > "now"|date('Y-m-d H:i') %}
                                        <form action="{{ path('sortie_desister', {'id': sortie.id}) }}" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-warning btn-sm">Se d√©sister</button>
                                        </form>
                                        {% if sortie.etat.value == 'En cr√©ation' %}
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modal-annuler-{{ sortie.id }}">
                                                Annuler
                                            </button>
                                        {% endif %}
                                    {% endif %}

                            </div>
                        </div>
                        <div class="card-footer text-center bg-light small">
                            <strong>Site :</strong> {{ sortie.siteOrganisateur.nom }}
                        </div>
                    </div>
                </div>

                {# Modal d'annulation pour chaque sortie #}
                <div class="modal fade" id="modal-annuler-{{ sortie.id }}" tabindex="-1" aria-labelledby="modalLabel{{ sortie.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content bg-dark text-light">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel{{ sortie.id }}">Annuler la sortie : {{ sortie.nom }}</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                            </div>
                            <div class="modal-body">
                                <form method="post" action="{{ path('sortie_annuler', {'id': sortie.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('annuler_sortie_' ~ sortie.id) }}">
                                    <div class="mb-3">
                                        <label for="motif-{{ sortie.id }}" class="form-label">Veuillez renseigner un motif d'annulation :</label>
                                        <textarea class="form-control" id="motif-{{ sortie.id }}" name="motifAnnulation" rows="4" required></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                        <button type="submit" class="btn btn-danger">Annuler la sortie</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucune sortie trouv√©e.</td>
                    </tr>
            {% endfor %}

        </div>


    <div class="mt-4">
        <a href="{{ path('sortie_creer') }}" class="btn btn-success">Cr√©er une sortie</a>
    </div>
{% endblock %}
