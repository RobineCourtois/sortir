{% extends 'base.html.twig' %}

{% block title %}SORTIR | Accueil{% endblock %}

{% block body %}

    <h2 class="mb-4">Filtrer les sorties</h2>

    <form method="GET" class="filter-form mb-5 p-4 bg-green border rounded shadow-sm">
        <div class="row g-3">
            <div class="col-md-3">
                <label for="campus" class="form-label">Campus</label>
                <select id="campus" name="campus" class="form-select">
                    {% for campus in campusList %}
                        <option value="{{ campus.id }}">{{ campus.nom }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-md-3">
                <label for="search" class="form-label">Nom de la sortie</label>
                <input type="text" id="search" name="search" class="form-control" placeholder="Rechercher...">
            </div>

            <div class="col-md-2">
                <label for="dateDebut" class="form-label">Entre</label>
                <input type="date" id="dateDebut" name="dateDebut" class="form-control">
            </div>

            <div class="col-md-2">
                <label for="dateFin" class="form-label">Et</label>
                <input type="date" id="dateFin" name="dateFin" class="form-control">
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Rechercher</button>
            </div>
        </div>

        <div class="form-check mt-4">
            <input type="checkbox" class="form-check-input" name="organisateur" id="organisateur">
            <label for="organisateur" class="form-check-label">Sorties dont je suis l'organisateur/trice</label>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="inscrit" id="inscrit">
            <label for="inscrit" class="form-check-label">Sorties auxquelles je suis inscrit/e</label>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="non_inscrit" id="non_inscrit">
            <label for="non_inscrit" class="form-check-label">Sorties auxquelles je ne suis pas inscrit/e</label>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="terminees" id="terminees">
            <label for="terminees" class="form-check-label">Sorties terminées</label>
        </div>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
        <tr>
            <th>Nom</th>
            <th>Date</th>
            <th>Clôture</th>
            <th>Inscrits/Places</th>
            <th>État</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                <td>{{ sortie.inscrits|length }}/{{ sortie.nbInscriptionMax }}</td>
                <td>{{ sortie.etat.value }}</td>
                <td>
                    {% if sortie.inscrits.contains(app.user) %}
                        ✔
                    {% endif %}
                </td>
                <td>{{ sortie.organisateur.prenom }} {{ sortie.organisateur.nom }}</td>
                <td class="actions">
                    {% if sortie.etat.value == 'En création' and sortie.organisateur == app.user %}
                        <a href="{{ path('sortie_modifier', {id: sortie.id}) }}">Modifier</a>
                        <a href="{{ path('sortie_publier', {id: sortie.id}) }}">Publier</a>
                        <a href="{{ path('sortie_supprimer', {id: sortie.id}) }}">Supprimer</a>
                    {% else %}
                        <a href="{{ path('sortie_afficher', {id: sortie.id}) }}">Afficher</a>
                        {% if sortie.inscrits.contains(app.user) %}
                            <a href="{{ path('sortie_desister', {id: sortie.id}) }}">Se désister</a>
                        {% else %}
                            <a href="{{ path('sortie_inscription', {id: sortie.id}) }}">S'inscrire</a>
                        {% endif %}
                        {% if sortie.organisateur == app.user %}
                            <a href="{{ path('sortie_annuler', {id: sortie.id}) }}">Annuler</a>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-end">
       {# <a href="{{ path('sortie_creer') }}" class="btn btn-success">Créer une sortie</a> #}
    </div>

{% endblock %}
