{% extends 'base.html.twig' %}

{% block title %}Accueil | Sortir.com{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

        <h2 class="mb-4">Filtrer les sorties</h2>

    <div class="card shadow-sm mb-5 form-background">
        <div class="card-body">
            {{ form_start(form) }}

            <div class="row g-3">
                <div class="col-md-3 mb-3">
                    {{ form_label(form.campus) }}
                    {{ form_widget(form.campus, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.campus) }}
                </div>
                <div class="col-md-3 mb-3">
                    {{ form_label(form.search) }}
                    {{ form_widget(form.search, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.search) }}
                </div>
                <div class="col-md-2 mb-3">
                    {{ form_label(form.dateDebut) }}
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateDebut) }}
                </div>
                <div class="col-md-2 mb-3">
                    {{ form_label(form.dateFin) }}
                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateFin) }}
                </div>
                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-success ">Rechercher</button>
                    <a href="{{ path('main_home') }}" class="btn btn-outline-secondary btn-sm w-auto d-flex align-items-center">
                        <i class="bi bi-arrow-repeat me-1"></i>
                    </a>
                </div>


            </div>

            <div class="row g-3 mt-3">
                <div class="col d-flex flex-wrap gap-4">
                    <div class="form-check">
                        {{ form_widget(form.organisateur, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.organisateur, null, {'label_attr': {'class': 'form-check-label ms-1'}}) }}
                    </div>
                    <div class="form-check">
                        {{ form_widget(form.inscrit, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.inscrit, null, {'label_attr': {'class': 'form-check-label ms-1'}}) }}
                    </div>
                    <div class="form-check">
                        {{ form_widget(form.non_inscrit, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.non_inscrit, null, {'label_attr': {'class': 'form-check-label ms-1'}}) }}
                    </div>
                    <div class="form-check">
                        {{ form_widget(form.terminees, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.terminees, null, {'label_attr': {'class': 'form-check-label ms-1'}}) }}
                    </div>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    {# Liste des sorties #}
    <h2 class="mb-4">Liste des sorties</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-success">
        <tr>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Clôture</th>
            <th>Inscrit / Places</th>
            <th>État</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y') : '' }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '' }}</td>
                <td>{{ sortie.participants|length }} / {{ sortie.nbInscriptionMax ?: '∞' }}</td>
                <td>{{ sortie.etat.value ?? sortie.etat }}</td>
                <td>{{ sortie.estInscrit(participant) ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('profil_consulter', {'id': sortie.organisateur.id}) }}" >
                        {{ sortie.organisateur.pseudo }}
                    </a>
                </td>

                <td>
                    {% if sortie.etat.value != 'Historisée' %}
                        <a href="{{ path('sortie_details', {id: sortie.id}) }}" class="btn btn-info btn-sm">Détails</a>
                    {% else %}
                        <span class="text-muted">Détails non disponibles</span>
                    {% endif %}

                    {% if sortie.etat == constant('App\\Utils\\Etat::OUVERTE') %}
                        {% set inscriptionPossible = sortie.dateLimiteInscription > "now"|date('Y-m-d H:i') and (sortie.nbInscriptionMax > sortie.participants|length or sortie.nbInscriptionMax is null) %}

                        {% if not sortie.estInscrit(participant) and inscriptionPossible and app.user != sortie.organisateur %}
                            <form action="{{ path('sortie_inscrire', {'id': sortie.id}) }}" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-success btn-sm">S'inscrire</button>
                            </form>
                        {% elseif sortie.estInscrit(participant) and sortie.dateHeureDebut > "now"|date('Y-m-d H:i') %}
                            <form action="{{ path('sortie_desister', {'id': sortie.id}) }}" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-warning btn-sm">Se désister</button>
                            </form>
                        {% endif %}
                    {% endif %}

                    {% if (sortie.organisateur == app.user or app.user.administrateur ) and sortie.etat.value == "En création" %}
                        <a href="{{ path('sortie_modifier', {'id': sortie.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                    {% endif %}
                    {% if (sortie.organisateur == app.user or app.user.administrateur) and sortie.etat.value == "Ouverte" %}
                        <a href="{{ path('sortie_annuler', {'id': sortie.id}) }}" class="btn btn-danger btn-sm">Annuler</a>
                    {% endif %}
                </td>


            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">Aucune sortie trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div>
    <a href="{{ path('sortie_creer') }}" class="btn btn-success">Créer une sortie</a>
</div>
{% endblock %}
